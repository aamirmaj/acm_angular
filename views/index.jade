extends layout

block content
  .container(ng-controller="Controller as ctrl")
    .row
      .col-md-6
        h3 Add a fruit
        form#addFruitForm(ng-submit="ctrl.addFruit(name, color)")
          .form-group
            label Name 
            input.form-control(type="text" ng-model="name" placeholder="Name")
          .form-group
            label Color 
            input.form-control(type="text" ng-model="color" placeholder="Color")
          button.btn.btn-primary(type="submit") Submit
      .col-md-6
        h3 Fruits
        table.table.table-striped
          tr
            th Name
            th Color
          tr(ng-repeat="fruit in ctrl.fruits")
            td {{fruit.attributes.name}}
            td {{fruit.attributes.color}}
      
